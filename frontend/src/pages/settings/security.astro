---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SecuritySettingsComponent from "@/components/SecuritySettings";
---

<BaseLayout
    head={{
        title: "Settings - Security",
        description:
            "Manage security and authentication settings for AudioBookRequest",
    }}
>
    <main class="container mx-auto p-4 max-w-4xl">
        <div class="mb-6">
            <h1 class="text-2xl font-bold mb-2">Security Settings</h1>
            <p class="text-base-content/70">
                Configure authentication and security settings for your
                AudioBookRequest instance.
            </p>
        </div>

        <SecuritySettingsComponent client:load />
    </main>
</BaseLayout>
