---
import PlusIcon from "@/components/icons/Plus.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import SearchInput from "@/components/SearchInput";
import BookCard from "@/components/BookCard";
import { isRegion, regions, type Region } from "@/types/region";
import type { AudiobookSearchResult } from "@/client";

// All data will be loaded client-side
const results: AudiobookSearchResult[] = [];
---

<BaseLayout head={{ title: "Search" }}>
    <div
        class="w-screen flex flex-col items-center justify-center p-6 sm:p-8 overflow-x-hidden gap-4"
    >
        <div class="flex w-full justify-between items-center">
            <h1 class="text-3xl font-bold text-left">Search</h1>
            <a
                href="/search/manual"
                title="Manually add request"
                class="btn btn- flex items-center justify-center"
            >
                Manual
                <PlusIcon />
            </a>
        </div>
        <div class="flex flex-col gap-4 justify-start items-center">
            <SearchInput client:load />

            <div
                id="book-results"
                class="min-w-[60vw] max-w-[90vw] sm:max-w-[80vw] h-full grid gap-1 gap-y-2 sm:gap-y-4 sm:gap-2 p-1 grid-flow-row grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 2xl:grid-cols-7"
            >
                <!-- Results will be populated client-side -->
            </div>

            <div id="pagination" class="join hidden">
                <button class="page-prev join-item btn">«</button>
                <button class="page-first join-item btn flex flex-col gap-0">
                    <span id="page-number">Page 1</span>
                    <span class="text-[0.5rem]">back to first</span>
                </button>
                <button class="page-next join-item btn">»</button>
            </div>

            <div
                id="no-results"
                class="pt-8 flex flex-col gap-1 items-center justify-center text-center max-w-[20rem]"
            >
                <span class="text-xl font-semibold">Perform a search</span>
                <span class="text-sm opacity-60">
                    Nothing has been searched yet.
                </span>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    const onPageChange = (page: number) => {
        const url = new URL(window.location.toString());
        url.searchParams.set("page", page.toString());
        window.location.href = url.toString();
    };

    document.querySelectorAll(".page-next").forEach((button) => {
        button.addEventListener("click", () => {
            const page = parseInt(
                new URL(window.location.toString()).searchParams.get("page") ||
                    "0",
            );
            onPageChange(page + 1);
        });
    });
    document.querySelectorAll(".page-prev").forEach((button) => {
        button.addEventListener("click", () => {
            const page = parseInt(
                new URL(window.location.toString()).searchParams.get("page") ||
                    "0",
            );
            if (page > 0) {
                onPageChange(page - 1);
            }
        });
    });
    document.querySelectorAll(".page-first").forEach((button) => {
        button.addEventListener("click", () => {
            onPageChange(0);
        });
    });
</script>
