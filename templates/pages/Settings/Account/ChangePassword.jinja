<form id="change-password-form"
      class="flex flex-col gap-2"
      hx-post="{{ base_url }}/settings/account/hx-password"
      hx-target="this">
    <h2 class="text-lg">
        Change Password
    </h2>
    <label for="old-password">
        Old password
    </label>
    <input id="old-password"
           name="old_password"
           type="password"
           class="input w-full"
           required />
    <label for="change-password-1">
        New Password
    </label>
    <input id="change-password-1"
           name="password"
           type="password"
           class="input w-full"
           required />
    <label for="change-password-2">
        Confirm password
    </label>
    <input id="change-password-2"
           name="confirm_password"
           type="password"
           class="input w-full"
           required />
    <button name="submit" class="btn btn-primary" type="submit">
        Change password
    </button>
</form>
